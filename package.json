{
  "name": "ordering-rest-api",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon",
    "build": "rmdir /s /q dist && tsc",
    "start": "node dist/server.js",
    "test": "jest --config jest.config.ts --coverage",
    "migrate:create": "prisma migrate dev --create-only",
    "migrate": "prisma migrate dev",
    "migrate:prod": "prisma migrate deploy",
    "copy-package": "xcopy package.json dist /y /i",
    "copy-prisma-schema": "xcopy prisma\\schema.prisma dist\\prisma\\ /y /i",
    "copy-env": "xcopy .env dist /y /i",
    "build-with-package": "npm run build && npm run copy-package && npm run copy-prisma-schema && npm run copy-env"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.4.1",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prisma": "^5.18.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
